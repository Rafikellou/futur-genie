# Environment Variables for futur-genie Educational Platform
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration for AI Quiz Generation
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Futur GÃ©nie"

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database URLs (if using direct connection)
DATABASE_URL=your_postgres_connection_string_here

# Email Configuration (for invitation emails)
EMAIL_FROM=noreply@futur-genie.com
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASSWORD=your_smtp_password_here

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Production Environment Variables
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Cache Configuration
REDIS_URL=your_redis_url_here